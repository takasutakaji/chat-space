.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        %p.current__user
          = current_user.name
      %ul.top-items__menu
        %li.top-items__btn__edit
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        %li.top-items__btn__cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message



